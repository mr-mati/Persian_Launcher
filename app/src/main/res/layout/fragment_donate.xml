<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:layoutDirection="ltr"
    android:orientation="vertical"
    android:paddingLeft="@dimen/_14sdp"
    android:paddingTop="@dimen/_18sdp"
    android:paddingRight="@dimen/_14sdp">

    <androidx.core.widget.NestedScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:paddingBottom="@dimen/_40sdp">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/pt_root_ui_medium"
                android:text="Донат"
                android:textColor="@color/white"
                android:textSize="@dimen/_20sdp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_8sdp"
                android:alpha="0.5"
                android:fontFamily="@font/pt_root_ui_medium"
                android:text="Данные"
                android:textColor="@color/white"
                android:textSize="@dimen/_10sdp" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@drawable/nik_rectangle2"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:padding="12.0dip"
                    android:src="@drawable/user1" />

                <EditText
                    android:id="@+id/nik"
                    android:layout_width="0.0dip"
                    android:layout_height="fill_parent"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:layout_weight="1.0"
                    android:background="@color/transparent"
                    android:digits="abcdefghijklmnopqrstuvwxyz_ABCDEFGHIJKLMNOPQRSTUVWXYZ"
                    android:fontFamily="@font/pt_root_ui_regular"
                    android:hint="Имя_Фамилия"
                    android:inputType="textCapSentences"
                    android:maxLength="20"
                    android:singleLine="true"
                    android:textColor="@color/white"
                    android:textColorHint="@color/menuTextDisable"
                    android:textSize="@dimen/_12sdp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@drawable/nik_rectangle2"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:padding="12.0dip"
                    android:src="@drawable/email" />

                <EditText
                    android:id="@+id/email"
                    android:layout_width="0.0dip"
                    android:layout_height="fill_parent"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:layout_weight="1.0"
                    android:background="@color/transparent"
                    android:fontFamily="@font/pt_root_ui_regular"
                    android:hint="Введите ваш Email"
                    android:inputType="textEmailAddress"
                    android:maxLength="100"
                    android:singleLine="true"
                    android:textColor="@color/white"
                    android:textColorHint="@color/menuTextDisable"
                    android:textSize="@dimen/_12sdp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@drawable/nik_rectangle2"
                android:orientation="horizontal">
                <!--                <ImageView
                                    android:padding="12.0dip"
                                    android:layout_width="@dimen/_40sdp"
                                    android:layout_height="@dimen/_40sdp"
                                    android:src="@drawable/ruble" />-->
                <EditText
                    android:id="@+id/sum"
                    android:layout_width="0.0dip"
                    android:layout_height="fill_parent"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:layout_weight="1.0"
                    android:background="@color/transparent"
                    android:digits="\ 1234567890"
                    android:fontFamily="@font/pt_root_ui_regular"
                    android:hint="Введите сумму"
                    android:inputType="number"
                    android:maxLength="100"
                    android:singleLine="true"
                    android:textColor="@color/white"
                    android:textColorHint="@color/menuTextDisable"
                    android:textSize="@dimen/_12sdp" />
            </LinearLayout>

            <TextView
                android:id="@+id/deposit"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginTop="@dimen/_14sdp"
                android:background="@drawable/button_red_rectangle"
                android:fontFamily="@font/pt_root_ui_medium"
                android:gravity="center"
                android:text="حساب خود را شارژ کنید"
                android:textColor="@color/white"
                android:textSize="@dimen/_12sdp" />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>