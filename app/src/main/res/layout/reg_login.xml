<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout4"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/registration_back"
    android:orientation="vertical">

    <View
        android:id="@+id/view4"
        android:layout_width="295dp"
        android:layout_height="match_parent"
        android:background="@drawable/reg_field_2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:drawableLeft="@drawable/reg_back_icon"
        android:drawablePadding="2.0dip"
        android:fontFamily="@font/montserrat_regular"
        android:gravity="center_vertical"
        android:text="برگشت"
        android:textColor="#ff848ba2"
        android:textSize="12.0sp"
        app:layout_constraintStart_toStartOf="@+id/play_but"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@id/password_enter"
        android:layout_width="246dp"
        android:layout_height="40dp"
        android:layout_marginBottom="25dp"
        android:background="@drawable/reg_field"
        android:ems="10"
        android:fontFamily="@font/montserrat_regular"
        android:gravity="center"        android:hint="رمز عبور"
        android:imeOptions="actionSend|flagNoExtractUi|flagNoFullscreen"
        android:inputType="textPassword"
        android:longClickable="true"
        android:maxLength="16"
        android:paddingLeft="14.0dip"
        android:paddingRight="14.0dip"
        android:singleLine="true"
        android:textColor="#ffffffff"
        android:textColorHint="#ff8a92aa"
        android:textSize="11.0sp"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/play_but"
        app:layout_constraintEnd_toEndOf="@+id/play_but"
        app:layout_constraintHorizontal_bias="0.397"
        app:layout_constraintStart_toStartOf="@+id/play_but"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <FrameLayout
        android:id="@id/test"
        android:layout_width="246dp"
        android:layout_height="40dp"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:background="@drawable/white_button_shape"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageView19"
        app:layout_constraintTop_toBottomOf="@+id/password_enter">

        <ImageView
            android:layout_width="@dimen/_26sdp"
            android:layout_height="@dimen/_23sdp"
            android:layout_marginStart="8dp"
            android:src="@drawable/fingerprint_scan"
            android:layout_gravity="center|start"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ورود با اثرانگشت"
            android:fontFamily="@font/iran_sans"
            android:textColor="@color/black"
            android:gravity="center"
            android:layout_gravity="center"
            android:textSize="18sp"/>

    </FrameLayout>

    <!--<Button
        android:id="@id/test"
        android:layout_width="246dp"
        android:layout_height="40dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/white_button_shape"
        android:fontFamily="@font/montserrat_bold"
        android:textCursorDrawable="@drawable/logo"
        android:text="ورود با اثرانگشت"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageView19"
        app:layout_constraintTop_toBottomOf="@+id/password_enter" />-->

    <TextView
        android:id="@id/password_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat_regular"
        android:gravity="center"
        android:layout_marginTop="8dp"
        android:text="بازیابی رمز عبور"
        android:textColor="#ff848ba2"
        android:textSize="10.0sp"
        app:layout_constraintEnd_toEndOf="@+id/password_enter"
        app:layout_constraintStart_toStartOf="@+id/password_enter"
        app:layout_constraintTop_toBottomOf="@+id/test" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="7dp"
        android:fontFamily="@font/montserrat_regular"
        android:text="ورود خودکار"
        android:textColor="#ffffffff"
        app:layout_constraintBottom_toBottomOf="@+id/auto_img"
        app:layout_constraintStart_toEndOf="@+id/auto_img"
        app:layout_constraintTop_toTopOf="@+id/auto_img" />

    <ImageView
        android:id="@id/auto_img"
        android:layout_width="17dp"
        android:layout_height="17dp"
        android:layout_marginBottom="15dp"
        app:layout_constraintBottom_toTopOf="@+id/play_but"
        app:layout_constraintStart_toStartOf="@+id/play_but"
        app:srcCompat="@drawable/reg_info" />


    <Switch
        android:id="@id/auto_switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:checked="false"
        android:thumb="@drawable/switch_off_circle"
        android:track="@drawable/switch_back_track"
        app:layout_constraintBottom_toBottomOf="@+id/textView6"
        app:layout_constraintEnd_toEndOf="@+id/play_but"
        app:layout_constraintTop_toTopOf="@+id/textView6"
        tools:ignore="UseSwitchCompatOrMaterialXml" />

    <Button
        android:id="@id/play_but"
        android:layout_width="246dp"
        android:layout_height="40dp"
        android:layout_marginBottom="80dp"
        android:background="@drawable/donate_tile_button"
        android:fontFamily="@font/montserrat_bold"
        android:text="بازی"
        android:textColor="#ffffffff"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageView19" />

    <ImageView
        android:id="@+id/imageView19"
        android:layout_width="8dp"
        android:layout_height="match_parent"
        android:background="@drawable/as"
        app:layout_constraintBottom_toBottomOf="@+id/view4"
        app:layout_constraintEnd_toStartOf="@+id/view4"
        app:layout_constraintTop_toTopOf="@+id/view4"
        app:layout_constraintVertical_bias="0.487" />

    <ImageView
        android:id="@+id/imageView20"
        android:layout_width="255dp"
        android:layout_height="258dp"
        android:background="@drawable/person_art"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/imageView19"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="26dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/montsserat_semibold"
        android:text="ورود"
        android:textColor="@color/white"
        android:textSize="23sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="225dp"
        android:layout_height="30dp"
        android:background="@drawable/ref_bg"
        android:fontFamily="@font/muller_medium"
        android:gravity="center"
        android:text="برای ورود به بازی رمز عبور خود را وارد کنید."
        android:textColor="#FFFFFF"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView20"
        app:layout_constraintEnd_toEndOf="@+id/imageView20"
        app:layout_constraintStart_toStartOf="@+id/imageView20"
        app:layout_constraintTop_toTopOf="@+id/imageView20" />

    <View
        android:id="@+id/view5"
        android:layout_width="80dp"
        android:layout_height="5dp"
        android:layout_marginBottom="16dp"
        android:background="#E80000"
        app:layout_constraintBottom_toTopOf="@+id/imageView20"
        app:layout_constraintEnd_toEndOf="@+id/imageView20"
        app:layout_constraintStart_toStartOf="@+id/imageView20" />

    <TextView
        android:id="@+id/textView79"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:fontFamily="@font/muller_medium"
        android:text="Mr_Mati [0]"
        android:textColor="#F5FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/view5"
        app:layout_constraintEnd_toEndOf="@+id/view5"
        app:layout_constraintStart_toStartOf="@+id/view5" />

</androidx.constraintlayout.widget.ConstraintLayout>
