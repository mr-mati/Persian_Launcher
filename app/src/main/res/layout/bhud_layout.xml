        android:textColor="#7986CB"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/logobr"
        app:layout_constraintStart_toEndOf="@+id/logobr"
        app:layout_constraintTop_toBottomOf="@+id/imageView17" />

