        app:layout_constraintTop_toBottomOf="@+id/grzona" />

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="@+id/bg_money"
        app:layout_constraintEnd_toStartOf="@+id/bg_money"
        app:layout_constraintStart_toStartOf="@+id/bg_money"
        app:layout_constraintTop_toTopOf="@+id/bg_money">

        <ImageView
            android:id="@+id/hud_star_1"
            android:layout_width="@dimen/_9sdp"
            android:layout_height="@dimen/_9sdp"
            android:layout_marginEnd="18dp"
            android:src="@drawable/ic_star" />

        <ImageView
            android:id="@+id/hud_star_2"
            android:layout_width="@dimen/_9sdp"
            android:layout_height="@dimen/_9sdp"
            android:layout_marginEnd="22dp"
            android:src="@drawable/ic_star" />

        <ImageView
            android:id="@+id/hud_star_3"
            android:layout_width="@dimen/_9sdp"
            android:layout_height="@dimen/_9sdp"
            android:layout_marginEnd="24dp"
            android:src="@drawable/ic_star" />

        <ImageView
            android:id="@+id/hud_star_4"
            android:layout_width="@dimen/_9sdp"
            android:layout_height="7dp"
            android:src="@drawable/ic_star" />

        <ImageView
            android:id="@+id/hud_star_5"
            android:layout_width="@dimen/_9sdp"
            android:layout_height="@dimen/_9sdp"
            android:layout_marginEnd="28dp"
