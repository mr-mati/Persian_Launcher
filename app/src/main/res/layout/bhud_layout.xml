    <ImageView
        android:id="@+id/bg_money"
        android:layout_width="260dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/hud_bg_main"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/view_money"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginEnd="14dp"
        app:layout_constraintBottom_toBottomOf="@+id/bg_money"
        app:layout_constraintEnd_toEndOf="@+id/bg_money"
        app:layout_constraintTop_toTopOf="@+id/bg_money" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:src="@drawable/ic_wallet"
        app:layout_constraintBottom_toBottomOf="@+id/view_money"
        app:layout_constraintEnd_toStartOf="@+id/hud_money"
        app:layout_constraintStart_toStartOf="@+id/view_money"
        app:layout_constraintTop_toTopOf="@+id/bg_money" />

    <TextView
        android:id="@+id/hud_money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:fontFamily="@font/muller_bold"
        android:text="250.477.815"
        android:textColor="@android:color/darker_gray"
        android:textSize="@dimen/_8sdp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView2"
        app:layout_constraintEnd_toEndOf="@+id/view_money"
        app:layout_constraintTop_toTopOf="@+id/imageView2" />

    <View
        android:id="@+id/view_hud"
        android:layout_width="150dp"
        android:layout_height="50dp"
        app:layout_constraintBottom_toBottomOf="@+id/bg_money"
        app:layout_constraintStart_toStartOf="@+id/bg_money"
        app:layout_constraintTop_toTopOf="@+id/bg_money" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
