        app:layout_constraintBottom_toBottomOf="@+id/view_hud"
        app:layout_constraintEnd_toStartOf="@+id/imageView2"
        app:layout_constraintStart_toStartOf="@+id/view_hud"
        app:layout_constraintTop_toTopOf="@+id/view_hud" />

    <View
        android:id="@+id/view_id"
        android:layout_width="40dp"
        android:layout_height="50dp"
        app:layout_constraintBottom_toBottomOf="@+id/bg_money"
        app:layout_constraintStart_toStartOf="@+id/bg_money"
        app:layout_constraintTop_toTopOf="@+id/bg_money" />

    <TextView
        android:id="@+id/txt_playerid"
        android:layout_width="20dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/muller_bold"
        android:text="1"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="@dimen/_8sdp"
        app:layout_constraintBottom_toBottomOf="@+id/view_id"
        app:layout_constraintEnd_toEndOf="@+id/view_id"
        app:layout_constraintStart_toStartOf="@+id/view_id"
        app:layout_constraintTop_toTopOf="@+id/view_id" />

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginBottom="4dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="4"
        app:layout_constraintBottom_toBottomOf="@+id/view_hud"
        app:layout_constraintEnd_toStartOf="@+id/imageView2"
        app:layout_constraintStart_toStartOf="@+id/view_hud">

        <TextView
            android:id="@+id/txt_ammo"
            android:layout_width="25dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/muller_bold"
            android:gravity="center"
            android:maxWidth="25dp"
            android:maxLines="1"
            android:text="100"
            android:textColor="@android:color/darker_gray"
            android:textSize="@dimen/_8sdp"
            app:layout_constraintBottom_toBottomOf="@+id/imageView2"
            app:layout_constraintEnd_toEndOf="@+id/view_hud"
            app:layout_constraintTop_toTopOf="@+id/imageView2" />

        <TextView
            android:id="@+id/txt_armour"
            android:layout_width="25dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/muller_bold"
            android:gravity="center"
            android:maxWidth="25dp"
            android:maxLines="1"
            android:text="100"
            android:textColor="@android:color/darker_gray"
            android:textSize="@dimen/_8sdp"
            app:layout_constraintBottom_toBottomOf="@+id/imageView2"
            app:layout_constraintEnd_toEndOf="@+id/bg_money"
            app:layout_constraintTop_toTopOf="@+id/imageView2" />

        <TextView
            android:id="@+id/txt_hunger"
            android:layout_width="25dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/muller_bold"
