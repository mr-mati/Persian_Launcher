    <ImageView
        android:id="@+id/gune_bg"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/mhud_gune"
        app:layout_constraintEnd_toEndOf="@+id/bg_money"
        app:layout_constraintTop_toBottomOf="@+id/bg_money" />

    <ImageView
        android:id="@+id/hud_weapon"
        android:layout_width="50dp"
        android:layout_height="49dp"
        app:layout_constraintBottom_toBottomOf="@+id/gune_bg"
        app:layout_constraintEnd_toEndOf="@+id/bg_money"
        app:layout_constraintStart_toStartOf="@+id/gune_bg"
        app:layout_constraintTop_toTopOf="@+id/gune_bg"
